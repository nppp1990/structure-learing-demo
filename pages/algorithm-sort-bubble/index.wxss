@import "../../common/algorithm.wxss";

.sort-container {
  display: flex;
  align-items: flex-end;
  height: 40%;
  margin-left: 15px;
  margin-top: 15px;
  margin-right: 15px;
}

.sort-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 5px;
  margin-right: 5px;
}

.sort-value-default {
  height: 16px;
  color: black;
  font-size: 14px;
}

.sort-value-index {
  height: 16px;
  color: blue;
  font-size: 16px;
}

.divider-margin {
  margin-top: 20px;
  margin-left: 10px;
  margin-right: 10px;
}
