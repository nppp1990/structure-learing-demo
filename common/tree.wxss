.item-rectangle {
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  width: 30px;
  height: 30px;
  font-size: 16px;
  border: 1px solid black;
  box-sizing: border-box;
}

.item-line {
  position: absolute;
  margin-top: -1px;
  height: 3px;
  background: black;
  transform-origin: 0 1px;
  z-index: -1;
}

.gray-item {
  background: lightgray;
}

.todo-item {
  background: lightgoldenrodyellow;
}