.item-point {
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  width: 30px;
  height: 30px;
  font-size: 16px;
  border: 1px solid black;
  box-sizing: border-box;
}

.point-selected {
  color: black;
  background: yellow;
}

.point-unselected {
  color: black;
  background: white;
}

.point-todo {
  color: black;
  background: lightgoldenrodyellow;
}

.point-none {
  color: white;
  background: lightgray;
}

.point-sorted {
  color: black;
  background: green;
}

.item-line-layout {
  z-index: -1;
  position: absolute;
  transform-origin: 0 6px;
  margin-top: -6px;
}

.item-line-wrapper {
  display: flex;
  align-items: center;
  position: relative;
  margin-left: 15px;
  margin-right: 15px;
  height: 12px;
}

.item-line {
  height: 3px;
  margin-left: -15px;
  margin-right: -15px;
}

.item-weight-wrapper {
  position: absolute;
  top:2px;
}

.item-weight {
  font-size: 13px;
  color: black;
}

.line-background {
  background: black;
}

.line-selected {
  background: blue;
}

.arrow-right {
  position: absolute;
  right: 0;
  margin-right: 1px;
  width: 8px;
  height: 8px;
  border-top: 3px solid black;
  border-left: 3px solid black;
  transform: rotate(135deg);
}

.arrow-left {
  position: absolute;
  width: 8px;
  height: 8px;
  border-top: 3px solid black;
  border-left: 3px solid black;
  transform: rotate(-45deg);
}

.gray-item {
  background: lightgray;
}

.todo-item {
  background: lightgoldenrodyellow;
}